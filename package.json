{
  "name": "image-shrinker",
  "version": "1.0.0",
  "description": "GUI for minifying images",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . 'Image Shrinker' --platform=darwin --arch=x64 --ignore=/^release/i --icon=assets/icons/mac/svg-shrinker.png.icns --overwrite --prune=true --out=release-builds",
    "pack-mac": "electron-packager . 'Image Shrinker' --platform=darwin --arch=x64 --ignore=/^release/i --icon=assets/icons/mac/svg-shrinker.png.icns --overwrite --prune=true --out=release-builds",
    "pack-linux": "electron-packager . 'Image Shrinker' --platform=linux --arch=x64 --ignore=/^release/i --icon=assets/icons/png/512x512 --overwrite"
  },
  "repository": "https://github.com/stefansl/image-shrinker",
  "keywords": [
    "SVG",
    "svgo",
    "SVG Shrinking",
    "shrinking tool",
    "image minifying",
    "image",
    "png",
    "jpg",
    "minifying"
  ],
  "author": "Stefan Schulz-Lauterbach",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^1.8.2-beta.5",
    "electron-packager": "^10.1.0"
  },
  "dependencies": {
    "jpegtran-bin": "^3.2.0",
    "pngquant-bin": "^3.1.1",
    "svgo": "^1.0.4"
  },
  "build": {
    "appId": "your.id",
    "mac": {
      "category": "your.app.category.type"
    }
  }
}
