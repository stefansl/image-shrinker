{
  "name": "image-shrinker",
  "version": "1.6.1",
  "description": "Minify your images and graphics with just one drop",
  "main": "main.js",
  "title": "Image Shrinker",
  "productName": "Image Shrinker",
  "icon": "build/icon.icns",
  "background": "test-background.png",
  "target": "mac",
  "contents": [
    {
      "x": 448,
      "y": 344,
      "type": "link",
      "path": "/Applications"
    },
    {
      "x": 192,
      "y": 344,
      "type": "file",
      "path": "ImageShrinker.app"
    }
  ],
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --dir",
    "build-mac": "electron-builder build --mac",
    "build-linux": "electron-builder build --linux",
    "build-win": "electron-builder build --win",
    "build-all": "electron-builder -mwl",
    "publish": "electron-builder build -p always"
  },
  "repository": "https://github.com/stefansl/image-shrinker",
  "keywords": [
    "SVG",
    "svgo",
    "SVG Shrinking",
    "shrinking tool",
    "image minifying",
    "image",
    "png",
    "jpg",
    "minifying"
  ],
  "author": "Stefan Schulz-Lauterbach",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^9.1.0",
    "electron-builder": "^22.2.0",
    "electron-installer-dmg": "^3.0.0",
    "electron-notarize": "^0.2.1",
    "fs-extra": "^8.1.0"
  },
  "dependencies": {
    "electron-log": "^3.0.8",
    "electron-settings": "^3.2.0",
    "electron-updater": "^4.2.0",
    "dotenv": "^8.2.0",
    "gifsicle": "^4.0.1",
    "make-dir": "^3.0.0",
    "mozjpeg": "^6.0.1",
    "pngquant-bin": "^5.0.2",
    "spectre.css": "^0.5.8",
    "svgo": "^1.3.0"
  },
  "build": {
    "appId": "de.clickpress.image-shrinker",
    "afterSign": "lib/notarize.js",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [],
      "type": "distribution",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "icon": "256x256.png"
    },
    "asar": true,
    "files": [
      "**/*",
      "!node-modules/*",
      "!release-builds/*"
    ],
    "extraResources": [
      "build/*"
    ],
    "fileAssociations": [
      {
        "name": "SVG",
        "ext": "svg"
      },
      {
        "name": "PNG",
        "ext": "png"
      },
      {
        "name": "GIF",
        "ext": "gif"
      },
      {
        "name": "JPG",
        "ext": "jpg"
      }
    ],
    "dmg": {
      "background": "build/bg_dmg.tiff",
      "icon": "build/icon_dmg.icns",
      "format": "ULFO",
      "contents": [
        {
          "x": 168,
          "y": 240
        },
        {
          "x": 372,
          "y": 240,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "pkg": {},
    "publish": {
      "provider": "github",
      "owner": "stefansl",
      "repo": "image-shrinker"
    }
  }
}
